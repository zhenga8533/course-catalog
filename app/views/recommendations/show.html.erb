<div class="card">
  <div class="card-header">
    <h3>Recommendation</h3>
  </div>

  <div class="card-body">

    <div id="<%= dom_id @recommendation %>">
      <p class="card-text">
        <strong>Student email:</strong>
        <%= link_to @recommendation.student_email, profile_path(User.find_by(email: @recommendation.student_email)), class: "text-decoration-none" %>
      </p>

      <p class="card-text">
        <strong>Professor email:</strong>
        <%= link_to @recommendation.prof_email, profile_path(User.find_by(email: @recommendation.prof_email)), class: "text-decoration-none" %>
      </p>

      <p class="card-text">
        <strong>Info:</strong>
        <% if @recommendation.reason.present? %>
          <%= @recommendation.reason %>
        <% else %>
          <span>No reason given.</span>
        <% end %>
      </p>

      <p class="card-text">
        <strong>Course:</strong>
          <%= link_to Course.find(@recommendation.course_id).title, course_path(@recommendation.course), class: "text-decoration-none" %>
      </p>

      <p class="card-text">
        <strong>Section:</strong>
        <% if @recommendation.section_id.present? %>
          <% section = Section.find(@recommendation.section_id) %>
          <%= link_to section.section_number, course_section_path(section.course, section), class: "text-decoration-none" %>
        <% else %>
          <span>N/A</span>
        <% end %>
      </p>
    </div>

    <div class="mt-3">
      <%= link_to "Edit", edit_recommendation_path(@recommendation), class: "btn btn-primary mr-2" %>
      <%= link_to "Back", recommendations_path, class: "btn btn-secondary mr-2" %>
      <%= button_to "Delete", @recommendation, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger", form_class: "d-inline" %>
    </div>
  </div>
</div>
