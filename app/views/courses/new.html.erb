<div id="<%= dom_id @course %>" class="card mb-3">
  <div class="card-header">
    <h3 class="card-title">New Course</h3>
  </div>

  <div class="card-body">
    <%= form_with(model: @course, class: "form") do |form| %>
      <% if @course.errors.any? %>
        <div class="alert alert-danger">
          <h2><%= pluralize(@course.errors.count, "error") %> prohibited this course from being saved:</h2>
          <ul>
            <% @course.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= form.label :term, class: "font-weight-bold" %>
        <%= form.text_field :term, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :title, class: "font-weight-bold" %>
        <%= form.text_field :title, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :description, class: "font-weight-bold" %>
        <%= form.text_field :description, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :subject, class: "font-weight-bold" %>
        <%= form.text_field :subject, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :catalog_number, class: "font-weight-bold" %>
        <%= form.number_field :catalog_number, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :campus, class: "font-weight-bold" %>
        <%= form.text_field :campus, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :course_id, class: "font-weight-bold" %>
        <%= form.number_field :course_id, class: "form-control" %>
      </div>

      <div class="actions">
        <%= form.submit "Save", class: "btn btn-success" %>
        <%= link_to "Back", dashboard_path, class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>
